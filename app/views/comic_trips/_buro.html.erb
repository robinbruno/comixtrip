<div class="creation-section">
  <div class="row01" >
    <%= simple_form_for :comix do |f| %>
      <%= f.input :title, input_html: { data: { action:"keyup->live-preview#previewTitle" }, placeholder: "Enter your comix Title" }, as: :string, wrapper: false, label: false %>
    <% end %>

    <div class="btn-group" role="group">
      <%= button_tag type: "button", class: "btn btn-primary dropdown-toggle", "data-bs-toggle": "dropdown", "aria-expanded": "false" do %>
    Backgrounds
      <% end %>
      <ul class="dropdown-menu">
        <li> "background_element", "#", class: "dropdown-item" </li>
        <li> "background_element_1", "#", class: "dropdown-item" </li>
      </ul>
    </div>

    <div class="btn-group" role="group">
      <%= button_tag type: "button", class: "btn btn-primary dropdown-toggle", "data-bs-toggle": "dropdown", "aria-expanded": "false" do %>
    Character #1
      <% end %>
      <ul class="dropdown-menu">
        <li> "fritz_element", "#", class: "dropdown-item" </li>
        <li> "fritz_element_1", "#", class: "dropdown-item" </li>
      </ul>
    </div>

    <div class="btn-group" role="group">
      <%= button_tag type: "button", class: "btn btn-primary dropdown-toggle", "data-bs-toggle": "dropdown", "aria-expanded": "false" do %>
    Character #2
      <% end %>
      <ul class="dropdown-menu">
        <li> "teacher_element", "#", class: "dropdown-item" </li>
        <li> "teacher_element_1", "#", class: "dropdown-item" </li>
      </ul>
    </div>
    <%= button_tag "Publish", type: "button", class: "btn btn-light", style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %>
  </div>
  <div class="row2">
    <%= simple_form_for :comix do |f| %>
    <div class="mb-2">
      <%= f.input :dialogue1, input_html: { data: { action:"keyup->live-preview#previewText" }, placeholder: "Enter your first dialogue" }, as: :string, wrapper: false, label: false %>
