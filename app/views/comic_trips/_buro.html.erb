      <%= f.input :dialogue1, input_html: { data: { action:"keyup->live-preview#previewText03" }, placeholder: "Enter your fourth dialogue" }, as: :string, wrapper: false, label: false %>
      <%= f.input :dialogue1, input_html: { data: { action:"keyup->live-preview#previewText04" }, placeholder: "Enter your fifth dialogue" }, as: :string, wrapper: false, label: false %>
      <%= f.input :dialogue1, input_html: { data: { action:"keyup->live-preview#previewText05" }, placeholder: "Enter your sixth dialogue" }, as: :string, wrapper: false, label: false %>
    </div>
    <% end %>
  </div>
</div>
